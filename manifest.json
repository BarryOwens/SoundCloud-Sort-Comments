{
  "manifest_version": 2,

  "name": "SoundCloud Comment Sort",
  "description": "Sorts Soundcloud comments by time",
  "version": "1.0",
  "permissions": [
    "tabs",  "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  icons": { "16": "img/icon.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
}